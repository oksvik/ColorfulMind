<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="270"
                android:centerColor="#673AB7"
                android:centerX="80%"
                android:endColor="#262626"
                android:startColor="#d1c4e9"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:width="60dp"
        android:height="60dp"
        android:bottom="10dp"
        android:left="10dp"
        android:top="10dp">
        <bitmap
            android:gravity="clip_horizontal|clip_vertical"
            android:src="@drawable/image_rainbow" />


    </item>

</layer-list>